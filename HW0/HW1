// 123456789
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

#define N 200

void print_matrix(int matrix[N][N], int n);

/*
 * @brief prints the input matrix.
 * @param matrix[][] is the biggest possible matrix.
 * @param n is the user input.
 */

void print_matrix(int matrix[N][N], int n){
    for (int i = 0 ; i < 2*n-1 ; i++){
        for (int j = 0 ; j < 2*n-1 ; j++){
            printf("%d ", matrix[i][j]);
        }
        printf("\n");
    }
    printf("\n");
}
/*
 * @brief-print n concentric squares,outer square prints value n
 * @and inner squares values descending  order, down to 1.
 */

int main(){
    int n;
    scanf("%d", &n);
    int matrix[N][N]={{0}};
    int row=0;
    int col=0;
    int current_mat_width=2*n-1;
    for(int i=n ; i>0 ; i--){
        for(int j=col ; j<current_mat_width ; j++){
            matrix[row][j]=i;
            matrix[current_mat_width-1][j]=i;
        }
        for(int k=row ; k<current_mat_width ; k++){
            matrix[k][col]=i;
            matrix[k][current_mat_width-1]=i;
        }
        row++;
        col++;
        current_mat_width--;
    }
    print_matrix( matrix,n);

    return 0;
}
